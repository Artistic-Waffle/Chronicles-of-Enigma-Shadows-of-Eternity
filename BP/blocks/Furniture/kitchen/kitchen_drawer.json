            {
                "condition": "q.block_property('minecraft:cardinal_direction') == 2",
                
                "components": {
                    "minecraft:transformation": {"rotation": [0, 0, 0]}
                }
            },
            {
                "condition": "q.block_property('minecraft:cardinal_direction') == 3",
                
                "components": {
                    "minecraft:transformation": {"rotation": [0, -90, 0]}
