{
    "format_version": "1.20.40",
    "minecraft:block": {
        "description": {
            "identifier": "coe:stripped_warped_stem_chair",
            "menu_category": {
                "category": "construction"
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [ "minecraft:cardinal_direction"],
                    "y_rotation_offset": 180
                }
            }
        },
            "permutations": [
              
              {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
                "components": {
                  "minecraft:transformation": { "rotation": [0, 0, 0] }
                }
              },
              {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
                "components": {
                  "minecraft:transformation": { "rotation": [0, 90, 0] }
                }
              },
              {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
                "components": {
                  "minecraft:transformation": { "rotation": [0, 180, 0] }
                }
              },
              {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
                "components": {
                  "minecraft:transformation": { "rotation": [0, -90, 0] }
                }
              }
            ],
        "components": {
            "minecraft:geometry":{
                "identifier": "geometry.chair"
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "stripped_warped_stem_chair"
                }
            },
            "minecraft:display_name": "Stripped Warped Stem Chair",
            "minecraft:collision_box" : {
				"origin": [
					-6,
					0,
					-6
				],
				"size": [
					12,
					10,
					12
				]
			},
			"minecraft:selection_box" : {
				"origin": [
					-6,
					0,
					-6
				],
				"size": [
					12,
					10,
					12
				]
			
			},
            "minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1.2
			},
			"minecraft:on_interact": {
				"event": "coe:sit"
			}
        },
        "events": {
			
			"force_ride":{
				"run_command":{
					"command":[
						"ride @p start_riding @e[type=coe:chair_sit,c=1] teleport_rider"
					]
				}
			},
			"coe:sit":{
				"sequence" : [
					{
						"condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
						"run_command":{
							"command":[
								"summon coe:chair_sit ~ ~ ~",
								"execute as @e[type=coe:chair_sit,c=1] run tp @s ~ ~-0.63 ~ facing ~ ~ 180"
							]
						},
						"trigger":{
							"event": "force_ride"
						}
					},
					{
						"condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
						"run_command":{
							"command":[
								"summon coe:chair_sit ~ ~ ~",
								"execute as @e[type=coe:chair_sit,c=1] run tp @s ~ ~-0.63 ~ facing ~ ~ -180"
							]
						},
						"trigger":{
							"event": "force_ride"
						}
					},
					{
						"condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
						"run_command":{
							"command":[
								"summon coe:chair_sit ~ ~ ~",
								"execute as @e[type=coe:chair_sit,c=1] run tp @s ~ ~-0.63 ~ facing ~90 ~ ~"
							]
						},
						"trigger":{
							"event": "force_ride"
						}
					},
					{
						"condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
						"run_command":{
							"command":[
								"summon coe:chair_sit ~ ~ ~",
								"execute as @e[type=coe:chair_sit,c=1] run tp @s ~ ~-0.63 ~ facing ~-90 ~ ~"
							]
						},
						"trigger":{
							"event": "force_ride"
						}
					}
				]
			}
		}
	}
}